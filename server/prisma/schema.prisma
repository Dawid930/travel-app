// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Travel {
  id               String       @id @default(uuid())
  title            String
  country          String
  location         String
  description      String
  travelCompanions Int
  rating           Int
  dateRange        DateRange    @relation(fields: [dateRangeId], references: [id], onDelete: Cascade)
  dateRangeId      String
  travelDays       TravelDays[]
  addedBy          User?        @relation(fields: [addedById], references: [id])
  addedById        String?
}

model TravelDays {
  id          String  @id @default(uuid())
  daynumber   Int
  date        String
  description String
  travel      Travel  @relation(fields: [travelId], references: [id], onDelete: Cascade)
  travelId    String
  addedBy     User?   @relation(fields: [addedById], references: [id])
  addedById   String?
}

model User {
  id         String       @id @default(uuid())
  name       String
  email      String       @unique
  password   String
  travel     Travel[]
  travelDays TravelDays[]
}

model DateRange {
  id     String   @id @default(uuid())
  start  String
  end    String
  Travel Travel[]
}
